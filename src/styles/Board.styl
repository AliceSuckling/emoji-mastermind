.Board
  margin: 40px auto
  &__guess
    &__button
      font-size: 14px
      border: 0
      background-color: #403f3f
      color: white
      margin: 15px 0px 15px 550px
      &:hover
        background-color: white
        color: #403f3f
        border: 1px solid #403f3f
      &:active
        animation: none
    &__row
      animation: fadeIn 1s backwards
      backface-visibility: hidden
      &__column
        border-radius: 50%
        width: 50px
        height: 50px
        margin-right: 5px
        color: transparent
        transform: scale(1)
        transition: transform 0.3s ease-in-out
        backface-visibility: hidden
        background-size: contain
        background-position:  center
        background-repeat: no-repeat
        &--0
          content: ""
          background-image: url('/src/img/nerd-face.png')
        &--1
          content: ""
          background-image: url('/src/img/money-mouth-face.png')
        &--2
          content: ""
          background-image: url('/src/img/thinking-face.png')
        &--3
          content: ""
          background-image: url('/src/img/wink-face.png')
        &--active
          cursor: pointer
          &:active
            transform: scale(0.4)

  &__clues
    color: transparent
    font-size: 10px
    margin-top: 2px
    &__black
      border-radius: 50%
      background-color: black
      margin: 10px 5px 0px 0px
    &__red
      border-radius: 50%
      background-color: red
      margin: 10px 5px 0px 0px

  &__message
    font-size: 32px
    text-align: center
    color: #8cb4ef
    font-family: monoscript
    margin: 50px 50px 0px 50px
    padding: 5px 0px 0px 5px
    animation: blink 1s infinite;
    &__reset__button
      font-size: 14px
      border: 0
      background-color: #403f3f
      color: white
      margin: 15px 0px 15px 15px
      &:hover
        background-color: white
        color: #403f3f
        border: 1px solid #403f3f

@keyframes blink {
  to { color: #399d89 }
}

@keyframes fadeIn
  0%
    opacity: 0
  100%
    opacity: 1
